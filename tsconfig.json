{
    "compilerOptions": {
        "target": "es2021",
        "module": "CommonJS",
        "lib": [
            "es2021"
        ],
        "moduleResolution": "Node",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "alwaysStrict": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "examples/**/*",
        "jest.config.ts"
    ],
}